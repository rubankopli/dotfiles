{
    //////////////////////////////
    //#region Language Settings //
    //////////////////////////////
    "[ansible]": {
        "editor.defaultFormatter": "redhat.ansible",
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.renderWhitespace": "trailing"
    },
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[markdown]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 120
    },
    "[properties]": {
        "editor.bracketPairColorization.enabled": true,
        "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?"
    },
    "[python]": {
        "editor.formatOnType": true,
        // Bracket Pairs
        "editor.guides.bracketPairs": true,
        "editor.bracketPairColorization.enabled": true,
        // Indentation Guides
        "editor.guides.indentation": true,
        "editor.guides.highlightActiveIndentation": true,
    },
    "C_Cpp.intelliSenseEngine": "disabled",
    //#endregion
    /////////////////////////////
    //#region General Settings //
    /////////////////////////////
    //#region > Color/Theme
    "workbench.colorTheme": "Material Candy",
    //#region >> Workbench Color Customizations
    "workbench.colorCustomizations": {
        "[Material Candy]": {
            // editor
            "breadcrumb.foreground": "#007744",
            "dropdown.background": "#050505",
            "editorLineNumber.foreground": "#007744",
            "editorLineNumber.activeForeground": "#00DDAA",
            "editor.background": "#000000",
            "input.background": "#050505",
            // menus
            "badge.background": "#110022",
            "banner.background": "#000000",
            "button.background": "#000000",
            "menu.background": "#050505",
            // panel
            "panel.background": "#000000",
            // side bar
            "activityBar.background": "#000000",
            "activityBar.border": "#050505",
            "sideBar.background": "#000000",
            "sideBar.border": "#111111",
            "statusBar.background": "#001133",
            "statusBarItem.remoteBackground": "#005533",
            // tab bar
            // "tab.activeBackground": "#122412",
            "editorGroupHeader.tabsBackground": "#000000",
            "tab.activeBackground": "#181818",
            //     "tab.activeBackground": "#121a24"
            "tab.activeForeground": "#00DDAA",
            "tab.inactiveBackground": "#000000",
            "tab.border": "#111111",
            "titleBar.activeBackground": "#000000",
            // window
        },
        "[Sweet vscode]": {
            "input.background": "#000000",
            "menu.background": "#000000",
            "panel.background": "#000000",
            "sideBar.background": "#000000"
        }
    },
    //#endregion
    //#region >> Token Color Customizations
    "editor.semanticTokenColorCustomizations": {
        "[Material Candy]": {
            "enabled": true,
            "rules": {}
        }
    },
    //#region Custom Color Codes
    //#endregion
    "editor.tokenColorCustomizations": {
        "comments": "#009900",
        "[Material Candy]": {},
        "textMateRules": [
            //#region >>> C++
            //#endregion
            //#region >>> Generic
            {
                "scope": "keyword.control.ref.properties",
                "settings": {
                    "foreground": "#FF0000"
                }
            },
            {
                "scope": "entity.name.section.group-title.ini",
                "settings": {
                    "foreground": "#65ff51"
                }
            },
            {
                "scope": "comment.line.number-sign.ini",
                "settings": {
                    "foreground": "#1a5200"
                }
            },
            // Constants
            {
                "scope": "constant.language",
                "settings": {
                    "foreground": "#009dff",
                    "fontStyle": "italic"
                }
            },
            // Separators
            {
                "scope": "keyword.other.separator",
                "settings": {
                    "foreground": "#FF8C00"
                }
            },
            {
                "scope": "punctuation.separator.key-value.ini",
                "settings": {
                    "foreground": "#FF8C00"
                }
            },
            {
                "scope": "punctuation.separator.option.ini",
                "settings": {
                    "foreground": "#0048ff"
                }
            },
            // Options
            {
                "scope": "string.other.option",
                "settings": {
                    "foreground": "#006eff"
                }
            },
            {
                "scope": "keyword.other.definition.ini",
                "settings": {
                    "foreground": "#009dff"
                }
            },
            //#endregion
            //#region >>> Log
            {
                "scope": "log.info",
                "settings": {
                    "foreground": "#00ff0d",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": "log.debug",
                "settings": {
                    "foreground": "#eeff00",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": "log.warning",
                "settings": {
                    "foreground": "#ff4400",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": "log.error",
                "settings": {
                    "foreground": "#FF0000",
                    "fontStyle": "bold"
                }
            },
            {
                "scope": "log.exceptiontype",
                "settings": {
                    "foreground": "#ff2a00",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": "log.string",
                "settings": {
                    "foreground": "#FF8C00",
                    "fontStyle": "italic"
                }
            },
            {
                "scope": "text.log",
                "settings": {
                    "foreground": "#00d7ac"
                }
            }
            //#endregion
        ]
    },
    //#endregion
    //#endregion
    //#region > Workbench
    "workbench.startupEditor": "none",
    // "workbench.settings.editor": "json",
    //#region >> Layout
    "workbench.editor.pinnedTabSizing": "compact",
    "workbench.sideBar.location": "right",
    //#endregion
    //#endregion
    //#region > Editor
    "editor.accessibilitySupport": "off",
    "editor.tabCompletion": "on",
    //#region >> View
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.guides.indentation": false,
    "editor.minimap.enabled": true,
    "editor.minimap.autohide": false,
    "editor.minimap.maxColumn": 80,
    "editor.minimap.scale": 1,
    "editor.minimap.side": "right",
    "editor.renderLineHighlight": "all",
    "editor.rulers": [
        {
            "column": 140,
            "color": "#1b1b1b"
        }
    ],
    "editor.stickyScroll.defaultModel": "foldingProviderModel",
    "editor.unicodeHighlight.nonBasicASCII": false,
    //#endregion
    //#region >> Formatting
    "editor.defaultFormatter": "xaver.clang-format",
    // "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "editor.wrappingIndent": "indent",
    //#endregion
    //#endregion
    //#region > Files
    "files.associations": {
        "*.yaml": "yaml",
        "*.inc": "cpp",
        "*.tcc": "cpp"
    },
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    //#endregion
    //#region > Notebook
    "notebook.output.textLineLimit": 300,
    //#endregion
    //#region > Remote
    "remote.SSH.remotePlatform": {
        "10.0.0.176": "linux",
        "magicmirror.local": "linux"
    },
    "security.allowedUNCHosts": [
        "TOWER"
    ],
    "security.workspace.trust.untrustedFiles": "open",
    //#endregion
    //#region > Terminal
    "terminal.integrated.stickyScroll.enabled": true,
    //#endregion
    //#region > Window
    "window.closeWhenEmpty": true,
    "window.title": "${rootName}${separator}${profileName}${separator}${appName}",
    //#endregion
    //#endregion
    ///////////////////////////////
    //#region Extension Settings //
    ///////////////////////////////
    //#region > Arduino
    "arduino.enableUSBDetection": true,
    "arduino.useArduinoCli": true,
    //#endregion
    //#region > BetterComments
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": " //",
            "color": "#474747",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        // {
        //     "tag": "/ @",
        //     "color": "#028700",
        //     "strikethrough": false,
        //     "underline": false,
        //     "backgroundColor": "transparent",
        //     "bold": false,
        //     "italic": false
        // },
        {
            "tag": "//",
            "color": "#16e06e"
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "temp",
            "color": "#D47C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "#004977",
            "bold": true,
            "italic": false
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        }
    ],
    //#endregion
    //#region > Clanged
    "clangd.checkUpdates": true,
    "clangd.detectExtensionConflicts": false,
    "clangd.path": "/home/seegrid.local/rkopli/.config/Code/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/19.1.2/clangd_19.1.2/bin/clangd",
    //#endregion
    //#region > CMake
    "cmake.buildDirectory": "${workspaceFolder}/build/x64-Linux-Development/",
    "cmake.configureOnOpen": true,
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "cmake.showOptionsMovedNotification": false,
    //#endregion
    //#region > CSpell
    "cSpell.language": "en,en-US",
    "cSpell.userWords": [
        "AUTOSAR",
        "Constexpr",
        "constexprs",
        "hellscape",
        "Karolinska",
        "nullpointer",
        "PIPC",
        "Rigil",
        "Struct",
        "Telematics",
        "Toliman",
        "tparam",
        "VRTE"
    ],
    //#endregion
    //#region > DoxygenDocumentationGenerator
    "doxdocgen.c.commentPrefix": "///",
    "doxdocgen.c.firstLine": "///",
    "doxdocgen.c.lastLine": "///",
    "doxdocgen.c.triggerSequence": "///",
    //#endregion
    //#region > Git
    "git.autofetch": true,
    //#endregion
    //#region > Github Copilot
    "github.copilot.enable": {
        "*": true,
        "plaintext": "true",
        "markdown": "true",
        "scminput": false
    },
    //#endregion
    //#region > Github Pull Requests
    "githubPullRequests.assignCreated": "${user}",
    "githubPullRequests.commentExpandState": "collapseAll",
    //#endregion
    //#region > Gitlens
    "gitlens.autolinks": [
        {
            "prefix": "TAS-",
            "url": "https://seegrid.atlassian.net/browse/TAS-<num>"
        }
    ],
    "gitlens.plusFeatures.enabled": false,
    "gitlens.telemetry.enabled": false,
    //#endregion
    //#region > GlassIt
    "glassit.alpha": 225,
    //#endregion
    //#region > HeaderSourceSwitch
    "headerSourceSwitch.mappings": [
        {
            "header": [
                ".h",
                ".hpp",
                ".hh",
                ".hxx"
            ],
            "source": [
                ".cpp",
                ".c",
                ".cc",
                ".cxx",
                ".inc",
                ".m",
                ".mm",
                ".tcc"
            ],
            "name": "C++"
        }
    ],
    //#endregion
    //#region > Redhat
    "redhat.telemetry.enabled": false,
    //#endregion
    //#region > Shellcheck
    "shellcheck.customArgs": [
        "--enable=all"
    ],
    //#endregion
    //#region > SonarLint
    "sonarlint.focusOnNewCode": false,
    "sonarlint.connectedMode.connections.sonarqube": [
        {
            "serverUrl": "https://www.sonarqube.ford.com",
            "connectionId": "sonarqube-ford",
            "disableNotifications": true
        }
    ],
    //#endregion
    //#region > YAML
    "yaml.format.singleQuote": true,
    "yaml.schemas": {},
    //#endregion
    //#endregion
}
